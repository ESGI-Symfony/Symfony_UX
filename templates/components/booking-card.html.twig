<div class="booking-card flex-child-equals">
    <div class="header">
        <img class="image" src="{{ asset('images/saturn.jpg') }}">
    </div>

    <div class="content">
        <div class="flex-row flex-wrap gap-100 align-center justify-space-between">
            <div class="flex-row gap-100">
                {{ bootstrap_icon("geo-alt") }}
                <p>{{ rental.celestialObject | trans }}</p>
            </div>
            <div class="badge badge-secondary-small">
                {{ rental.price | number_format(2, ',', '.') }} â‚¬
            </div>
        </div>
        <h4 class="mb-50">{{ rental.rentType.value | trans }}</h4>

        {% if type.value is same as('booking') %}
            <div>
                <p>From 23-06-2019 to 23-01-2300 {# TODO #}</p>
            </div>

            {% if rental.sumRating %}
                <div class="rating">
                    {{ include('partials/_stars.html.twig', {rate: rental.sumRating}) }}
                </div>
            {% else %}
                <div>
                    <button class="btn btn-primary">{{ bootstrap_icon("chevron-right") }} {{ "add_review" | trans }}</button>
                </div>
            {% endif %}
        {% endif %}

        {% if type.value is same as('rental') %}
            <p>{{ 'count_bookings' | trans({'%count%': rental.reservations().count}) }}</p>
        {% endif %}


    </div>
</div>