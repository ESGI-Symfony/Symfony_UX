<div class="card-small">
  <div class="header">
    <img class="image" src="{{ asset('images/saturn.jpg') }}">
    {% if rating != null %}
      <div class="rating">
        {{ rating }}
        {{ bootstrap_icon("star-fill") }}
      </div>
    {% endif %}
  </div>

  <div class="content">
    <div class="flex-row gap-100">
      {{ bootstrap_icon("geo-alt") }}
      {{ rental.celestialObject | trans }}
    </div>

    <h4>{{ rental.rentType.value | trans }}</h4>

    <div class="body">
      {{ rental.description }}
    </div>

    <div class="footer">
      <div class="features">
        <span>{{ "features" | trans }}</span>

        <div class="icons">
          {% for option in options %}
            <span>
              {{ option }}
            </span>
          {% endfor %}
        </div>
      </div>

      <a class="btn btn-primary" href="{{ path('front_rental_overview', {'id': rental.id}) }}">
          {{ "book" | trans }}・{{ rental.price }}€
      </a>
    </div>
  </div>
</div>
