{% extends 'back/base.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}
    <h3>User</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Lessor_number</th>
                <td>{{ user.lessorNumber }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ user.uuid }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_user_index') }}">back to list</a>

    <a href="{{ path('back_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
