{% extends 'front/rental/base.html.twig' %}

{% block title %}{{ 'rental_in_object' | trans({rental: rental.rentType.value, object: rental.celestialObject}) }} - Spacebnb{% endblock %}

{% block pannel %}
    <div class="flex-column gap-100">
        <h5>{{ "book" | trans }}</h5>

        {{ form_start(form) }}

        <div class="flex-column gap-200 mb-300">
            {{ include('partials/_input.html.twig', {input: form.date_begin}) }}
            {{ include('partials/_input.html.twig', {input: form.date_end}) }}
        </div>

        {{ form_errors(form) }}

        <button class="btn btn-primary ms-auto">{{ bootstrap_icon('rocket-takeoff') }} {{ 'book' | trans }}</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
