{% extends 'front/rental/base.html.twig' %}

{% block title %}{{ rental.rentType.value | trans }} in {{ rental.celestialObject | trans }} - Spacebnb{% endblock %}

{% block main %}
    <div class="flex-column gap-100">
        <h5>{{ "book" | trans }}</h5>

        <p class="mb-300 text-center">{{ 'add_your_rental_tip' | trans }}</p>
        {{ form_start(form) }}

        <div class="flex-column gap-200 mb-300">
            {{ include('partials/_input.html.twig', {input: form.motivation, attr: {'rows': 8}}) }}
            {{ include('partials/_input.html.twig', {input: form.lessor.firstname}) }}
            {{ include('partials/_input.html.twig', {input: form.lessor.lastname}) }}
            {{ include('partials/_input.html.twig', {input: form.lessor.phone}) }}
            {{ include('partials/_input.html.twig', {input: form.lessor.lessor_number}) }}
        </div>
        <button class="btn btn-primary ms-auto">{{ bootstrap_icon('rocket-takeoff') }} {{ 'become_lessor' | trans }}</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
