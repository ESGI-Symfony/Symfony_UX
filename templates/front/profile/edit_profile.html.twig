{% extends 'front/base.html.twig' %}

{% block body %}

    <div class="container edit-profile flex-column column-400 justify-center mx-auto gap-300">
        <h4 class="text-center"> {{ 'my_profile' | trans | raw }}</h4>

        <a href="{{ path('app_profile_account') }}" class="text-decoration-none">
            <button class="btn btn-text custom-btn">{{ bootstrap_icon('arrow-left') }} {{ 'back' | trans }}</button>
        </a>

        {{ form_start(form) }}

        <div class="flex-column gap-400">
            <div class="flex-column gap-200">
                {{ include('partials/_input.html.twig', {input: form.nickname}) }}
                {{ include('partials/_input.html.twig', {input: form.lastname}) }}
                {{ include('partials/_input.html.twig', {input: form.firstname}) }}
                {{ include('partials/_input.html.twig', {input: form.email}) }}
                {{ include('partials/_input.html.twig', {input: form.phone}) }}
            </div>
            <button class="btn btn-primary mx-auto">{{ bootstrap_icon('rocket') }} {{ 'save_my_profile' | trans }}</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
